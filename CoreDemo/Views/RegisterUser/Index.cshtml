@model UserSignUpViewModel
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/UserLayout.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title> </title>
    <link href="~/CoreBlogTema/css/bootstrap.css" rel='stylesheet' type='text/css' />
    <link href="~/CoreBlogTema/css/single.css" rel='stylesheet' type='text/css' />
    <link href="~/CoreBlogTema/css/style.css" rel='stylesheet' type='text/css' />
    <link href="~/CoreBlogTema/css/fontawesome-all.css" rel="stylesheet">
    <link href="//fonts.googleapis.com/css?family=Poppins:100,100i,200,200i,300,300i,400,400i,500,500i,600,600i,700,700i,800"
          rel="stylesheet">
</head>
<body>
    <section class="main-content-w3layouts-agileits">
        <div class="container">
            <h3 class="tittle">Register Now</h3>
            <div class="inner-sec">
                <div class="login p-5 bg-light mx-auto mw-100">
                    <form asp-action="Index" method="post">
                        <div class="form-row">
                            <div class="col-md-6 mb-3">
                                <label for="validationCustom01">Fullname</label>
                                <span asp-validation-for="@Model.Fullname" class="text-danger"></span>
                                <input type="text" class="form-control" id="validationDefault01" asp-for="@Model.Fullname">
                            </div>
                            <div class="col-md-6 mb-3">
                                <label for="validationCustom02">Username</label>
                                <span asp-validation-for="@Model.Username" class="text-danger"></span>
                                <input type="text" class="form-control" id="validationDefault02" asp-for="@Model.Username">
                            </div>

                            <div class="col-md-12 mb-12">
                                <label for="validationCustom02">Email</label>
                                <span asp-validation-for="@Model.Email" class="text-danger"></span>
                                <input type="email" class="form-control" id="validationDefault02" asp-for="@Model.Email">
                            </div>

                        </div>
                        <div class="form-row mt-2">
                            <div class="form-group col-md-6">
                                <label for="exampleInputPassword1 mb-2">Password</label>
                                <span asp-validation-for="@Model.Password" class="text-danger"></span>
                                <input type="password" class="form-control" id="password1" asp-for="@Model.Password" />
                            </div>
                            <div class="form-group col-md-6">
                                <label for="exampleInputPassword2 mb-2">Confirm Password</label>
                                <span asp-validation-for="@Model.ConfirmPassword" class="text-danger"></span>
                                <input type="password" class="form-control" id="password2" asp-for="@Model.ConfirmPassword" />
                            </div>

                        </div>
                        <button type="submit" class="btn btn-primary submit mb-4">Register</button>
                        <p>
                            <a href="#">By clicking Signup, I agree to your terms</a>
                        </p>
                        <p class="text-muted text-center"><small>Already have an account?</small></p>
                        <a class="btn btn-sm btn-white btn-block" href="/Login/Index">Login</a>
                        <div class="text-danger" asp-validation-summary="ModelOnly"></div>
                    </form>
                </div>
            </div>
        </div>
    </section>
</body>
</html>
