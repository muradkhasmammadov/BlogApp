<div class="comment-top">
    <h4>Leave a Comment</h4>
    <div class="comment-bottom">
        <form asp-action="PartialAddComment" asp-controller="Comment" method="post">
            <input class="form-control" type="hidden" name="BlogID" value="@Model" /> 

            <textarea class="form-control" rows="10" cols="50" name="CommentContent" placeholder="Message..." required=""></textarea>
            <button type="submit" class="btn btn-primary submit">Submit</button>
        </form>
    </div>
</div>
