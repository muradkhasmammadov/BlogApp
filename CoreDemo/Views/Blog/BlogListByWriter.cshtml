@using EntityLayer.Concrete
@model List<Blog>
@{
    ViewData["Title"] = "BlogListByWriter";
    Layout = "~/Views/Shared/WriterLayout.cshtml";
}

<h1>Writer Blogs</h1>

<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Blog Title</th>
        <th>Created Time</th>
        <th>Category</th>
        <th>Status</th>
        <th>Delete</th>
        <th>Update</th>
    </tr>
    @foreach (var item in Model)
    {
        
        <tr>
            <th>@item.BlogID</th>
            <td>@item.BlogTitle</td>
            <td>@(((DateTime)item.BlogCreateDate).ToString("dd-MMM-yyyy"))</td>
            <td>@item.Category.CategoryName</td>
            <td>
                @if (item.BlogStatus)
                {
                    <span class="badge badge-success">Active</span>
                }
                else
                {
                    <span class="badge badge-secondary">Passive</span>
                }
            </td>
            <td><a href="~/Blog/DeleteBlog/@item.BlogID" class="btn btn-danger">Delete</a></td>
            <td><a href="~/Blog/EditBlog/@item.BlogID" class="btn btn-warning">Update</a></td>
        </tr>
    }
</table>
<a href="~/Blog/BlogAdd" class="btn btn-info">New Blog</a>