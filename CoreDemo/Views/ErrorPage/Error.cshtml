@{
    Layout = null;
}

<!DOCTYPE html>
<html>

<head>
    <title>Error</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta charset="UTF-8" />
    <meta name="keywords" content="Error" />
    <script>
        addEventListener("load", function () {
            setTimeout(hideURLbar, 0);
        }, false);

        function hideURLbar() {
            window.scrollTo(0, 1);
        }
    </script>
    <link rel="stylesheet" href="~/weberror/css/style.css" type="text/css" media="all" />
    <link href="~/weberror/css/font-awesome.css" rel="stylesheet">
</head>

<body>
    <section class="w3l-error-61-404">
        <div class="error-61-mian">
            <div class="wrapper">
                <div class="errors-16-top">
                    <div class="errors-16-info">
                        <h3>404 </h3>

                        <p>Oops! Page Not Found</p>
                        <a href="~/Blog/Index">
                            <input type="submit" value="Home Page" style="width: 100%; background-color: transparent;" />
                        </a>
                        <div class="social-coming-icons">
                            <a href="#" title="Facebook" class="footer-fb">
                                <span class="fa fa-facebook"
                                      aria-hidden="true"></span>
                            </a>
                            <a href="#" title="Twitter" class="footer-tw">
                                <span class="fa fa-twitter"
                                      aria-hidden="true"></span>
                            </a>
                            <a href="#" title="Google Plus" class="footer-gg">
                                <span class="fa fa-google-plus"
                                      aria-hidden="true"></span>
                            </a>
                            <a href="#" title="Linkedin" class="footer-lin">
                                <span class="fa fa-linkedin"
                                      aria-hidden="true"></span>
                            </a>
                        </div>

                    </div>

                </div>
                <div class="copyright-footer">
                    <div class="copy-right">
                        <p>
                            © @DateTime.Now.Year Bicycle Error Page. All rights reserved | Design by
                            <a href="http://w3layouts.com/" target="_blank">W3layouts</a>
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </section>
</body>

</html>