@using EntityLayer.Concrete
@model List<Category>
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
    <a href="~/lib/bootstrap/dist/css/bootstrap.css.map"></a>
    <a href="~/lib/bootstrap/dist/css/bootstrap.min.css.map"></a>
    <a href="~/lib/bootstrap/dist/css/bootstrap.rtl.css.map"></a>
    <a href="~/lib/bootstrap/dist/css/bootstrap.rtl.min.css.map"></a>
    <link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/lib/bootstrap/dist/css/bootstrap.rtl.min.css" rel="stylesheet" />
    <link href="~/lib/bootstrap/dist/css/bootstrap.rtl.css" rel="stylesheet" />
    <link href="~/lib/bootstrap/dist/css/bootstrap.css" rel="stylesheet" />
</head>
<body>
    <table class="table table-bordered">
        <tr>
            <th>Category ID</th>
            <th>Category Name</th>
            <th>Category Status</th>
            <th>Details</th>
            <th>Delete</th>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.CategoryID</td>
                <td>@item.CategoryName</td>
                <td>@item.CategoryStatus</td>
                <td><a href="#" class="btn btn-success">Details</a></td>
                <td><a href="#" class="btn btn-warning">Details</a></td>
            </tr>
        }
    </table>
</body>
</html>
