@model CoreDemo.Models.AddProfileImage
@{
    ViewData["Title"] = "WriterAdd";
    Layout = "~/Views/Shared/WriterLayout.cshtml";
}

<form class="form-group" method="post" enctype="multipart/form-data">
    <div class="col-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Edit Writer Profile</h4>
                <br />
                @Html.HiddenFor(x=>x.WriterID, new { @class = "form-control"})
                <form class="forms-sample">
                    <div class="form-group">
                        <label for="exampleInputName1">Name</label>
                        @Html.TextBoxFor(x=>x.WriterName, new { @class = "form-control"})
                        @Html.ValidationMessageFor(x=>x.WriterName)
                    </div>
                    <div class="form-group">
                        <label for="exampleInputEmail3">Email address</label>
                        @Html.TextBoxFor(x=>x.WriterEmail, new { @class = "form-control"})
                        @Html.ValidationMessageFor(x=>x.WriterEmail)
                    </div>
                    <div class="form-group">
                        <label for="exampleInputPassword4">New Password</label>
                        @Html.PasswordFor(x=>x.WriterPassword, new { @class = "form-control"})
                        @Html.ValidationMessageFor(x=>x.WriterPassword)
                    </div>
                    <div class="form-group">
                        <label for="exampleInputPassword4">Status</label>
                        @Html.TextBoxFor(x=>x.WriterStatus, new { @class = "form-control"})
                        @Html.ValidationMessageFor(x=>x.WriterStatus)
                    </div>
                    <div class="form-group">
                        <label>Writer Image </label>
                        <input type="file" name="WriterImage" />
                    </div>
                    <div class="form-group">
                        <label for="exampleTextarea1">Writer About</label>
                        @Html.TextAreaFor(x=>x.WriterAbout, 10,3, new { @class = "form-control"})
                        @Html.ValidationMessageFor(x=>x.WriterAbout)
                        <textarea class="form-control" id="exampleTextarea1" rows="4"></textarea>
                    </div>
                    <button type="submit" class="btn btn-gradient-primary mr-2">Add</button>
                    <button class="btn btn-light">Cancel</button>
                </form>
            </div>
        </div>
    </div>
</form>