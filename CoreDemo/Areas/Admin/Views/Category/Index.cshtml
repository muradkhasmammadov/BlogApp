@using X.PagedList
@using X.PagedList.Mvc.Core
@model IPagedList<EntityLayer.Concrete.Category>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}
<h1>Categories</h1>
<br />
<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Category Name</th>
        <th>Activate</th>
        <th>Deactivate</th>
        <th>Edit</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.CategoryID</td>
            <td>@item.CategoryName</td>
            <td>
                <a href="~/Admin/Category/DeleteCategory/@item.CategoryID" id="DeleteBtn"
               class="btn btn-github" onclick="return confirm('Are you sure?');">Deactivate</a>
            </td>
            <td><a href="#" class="btn btn-foursquare">Activate</a></td>
            <td><a href="#" class="btn btn-success">Edit</a></td>
        </tr>
    }
</table>
<a href="~/Admin/Category/AddCategory" class="btn btn-primary"> New Category </a>
<br />
<br />
<br />
@Html.PagedListPager((IPagedList)Model, page => Url.Action("Index", new { page }))

