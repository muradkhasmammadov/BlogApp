@model CoreDemo.Areas.Admin.Models.AddAdminViewModel
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<h3>Create new admin</h3>

<form method="post" class="forms-sample" asp-action="Index">
    <label>Full Name</label>
    <input type="text" class="form-control" asp-for="@Model.Fullname"/>
    <br />
    <label>Username</label>
    <input type="text" class="form-control" asp-for="@Model.Username" />
    <br />
    <label>Email</label>
    <input type="email" class="form-control" asp-for="@Model.Email" />
    <br />
    <label>Password</label>
    <input type="password" class="form-control" asp-for="@Model.Password" />
    <br />
    <label>Confirm Password</label>
    <input type="password" class="form-control" asp-for="@Model.ConfirmPassword" />
    <br />
    <button class="btn btn-success">Save</button>
</form>