@using X.PagedList
@using X.PagedList.Mvc.Core
@model IPagedList<EntityLayer.Concrete.AppUser>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}
<h1>Categories</h1>
<br />
<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Category Name</th>
        <th>Activate</th>
        <th>Deactivate</th>
        <th>Edit</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Id</td>
            <td>@item.UserName</td>
            <td>
                <a href="~/Admin/AddAdmin/DeleteAdmin/@item.Id" id="DeleteBtn"
                   class="btn btn-github" onclick="return confirm('Are you sure?');">Delete</a>
            </td>
        </tr>
    }
</table>
<a href="~/Admin/AddAdmin/AddAdmin" class="btn btn-primary"> New Category </a>
<br />
<br />
<br />
@Html.PagedListPager((IPagedList)Model, page => Url.Action("Index", new { page }))

